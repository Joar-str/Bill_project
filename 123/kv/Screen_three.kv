MDScreen:
    name: 'scr3'
    id: scr3
    screen3_label1:screen3_label1
    screen3_label2:screen3_label2
    FloatLayout:
        cols:1

        MDToolbar:
            font_style: "Button"
            title: 'Check page for each bill'
            bold: True
            text_size: self.size
            pos_hint: {'center_y': .9}

        MDRectangleFlatButton:
            pos_hint: {'center_x': .5, 'center_y': .09}
            font_size: 16
            text:'Cancel'
            text_color: [0, 0, 1, 1]
            on_press:
                root.manager.transition.direction = 'right'
                app.root.current = 'scr1'

#first checkline --------------------------------------
        BoxLayout:
            id: try_box
            orientation: "horizontal"
            spacing: 10
            padding: 150
            MDLabel:
                id: screen3_label1
                bold: False
                text: app.stored_data.get('mydata')['text'] if app.stored_data.exists('mydata') else ''
                size_hint: (.3,.2)
                font_size: 16
                pos_hint: {'center_x': .5, 'center_y': 1}

            MDRectangleFlatButton:
                id: button1
                font_size: 16
                text: 'Payed'
                text_color: [0, 0, 1, 1]
                pos_hint: {'center_x': .5, 'center_y': 1}
                on_press:
                    if self.text_color == [0, 0, 1, 1]: self.text_color = [0, 1, 0, 1]
                    else: self.text_color = [0, 0, 1, 1]

                size_hint: (.15, .1)
            MDRectangleFlatButton:
                id: button2
                font_size: 16
                text: 'Not payed'
                text_color: [0, 0, 1, 1]
                pos_hint: {'center_x': .5, 'center_y': 1}
                on_press:
